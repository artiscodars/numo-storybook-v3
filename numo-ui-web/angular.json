{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "ngx-numo-ui-web": {
            "projectType": "library",
            "root": "projects/ngx-numo-ui-web",
            "sourceRoot": "projects/ngx-numo-ui-web/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "projects/ngx-numo-ui-web/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/ngx-numo-ui-web/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "projects/ngx-numo-ui-web/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "tsConfig": "projects/ngx-numo-ui-web/tsconfig.spec.json",
                        "polyfills": ["zone.js", "zone.js/testing"]
                    }
                },
                "storybook": {
                    "builder": "@storybook/angular:start-storybook",
                    "options": {
                        "configDir": "projects/ngx-numo-ui-web/.storybook",
                        "browserTarget": "ngx-numo-ui-web:build",
                        "compodoc": true,
                        "compodocArgs": [
                            "-e",
                            "json",
                            "-d",
                            "projects/ngx-numo-ui-web"
                        ],
                        "port": 6006,
                        "styles": [
                            "projects/ngx-numo-ui-web/src/theme/tailwind.css"
                        ]
                    }
                },
                "build-storybook": {
                    "builder": "@storybook/angular:build-storybook",
                    "options": {
                        "configDir": "projects/ngx-numo-ui-web/.storybook",
                        "browserTarget": "ngx-numo-ui-web:build",
                        "compodoc": true,
                        "compodocArgs": [
                            "-e",
                            "json",
                            "-d",
                            "projects/ngx-numo-ui-web"
                        ],
                        "outputDir": "storybook-static"
                    }
                }
            }
        }
    }
}
